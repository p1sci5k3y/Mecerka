// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  PROVIDER
  ADMIN
  RUNNER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  DELIVERED
  CANCELLED
}

model User {
  id                         Int       @id @default(autoincrement())
  email                      String    @unique
  password                   String
  pin                        String? // Hashed transaction PIN for purchases
  name                       String
  // role      Role     @default(CLIENT) // Removed in favor of roles array
  roles                      Role[]    @default([CLIENT])
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
  emailVerified              Boolean   @default(false)
  verificationToken          String?   @unique
  verificationTokenExpiresAt DateTime?
  mfaSecret                  String? // Stores the TOTP secret
  mfaEnabled                 Boolean   @default(false)
  mfaFailedAttempts          Int       @default(0)
  mfaLockUntil               DateTime?
  active                     Boolean   @default(true)

  // Geolocation
  address   String?
  latitude  Float?
  longitude Float?

  // Relations
  orders   Order[] // As Client
  products Product[] // As Provider (if role is PROVIDER)

  // Runner Relations
  runnerProfile RunnerProfile?
  runnerOrders  Order[]        @relation("RunnerOrders")
}

model City {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  products Product[]
  orders   Order[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  image_url String?
  createdAt DateTime @default(now())

  // Relations
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign Keys
  providerId Int
  cityId     Int
  categoryId Int

  // Relations
  provider   User        @relation(fields: [providerId], references: [id])
  city       City        @relation(fields: [cityId], references: [id])
  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
}

model Order {
  id         Int         @id @default(autoincrement())
  totalPrice Decimal     @db.Decimal(10, 2)
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Foreign Keys
  clientId Int
  cityId   Int

  // Relations
  client User        @relation(fields: [clientId], references: [id])
  city   City        @relation(fields: [cityId], references: [id])
  items  OrderItem[]

  // Delivery Information
  deliveryAddress String?
  deliveryLat     Float?
  deliveryLng     Float?

  // Runner Matching
  runnerId           Int?
  deliveryDistanceKm Decimal? @db.Decimal(10, 2)
  runnerBaseFee      Decimal? @db.Decimal(10, 2)
  runnerPerKmFee     Decimal? @db.Decimal(10, 2)
  runner             User?    @relation("RunnerOrders", fields: [runnerId], references: [id])
}

model OrderItem {
  id              Int     @id @default(autoincrement())
  quantity        Int
  priceAtPurchase Decimal @db.Decimal(10, 2)

  // Foreign Keys
  orderId   Int
  productId Int

  // Relations
  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model RunnerProfile {
  id     Int @id @default(autoincrement())
  userId Int @unique

  // Location
  baseLat       Float?
  baseLng       Float?
  maxDistanceKm Float  @default(10.0)

  // Pricing
  priceBase  Decimal @default(2.00) @db.Decimal(10, 2)
  pricePerKm Decimal @default(0.50) @db.Decimal(10, 2)
  minFee     Decimal @default(3.00) @db.Decimal(10, 2)

  // Status & Metrics
  isActive    Boolean  @default(true)
  ratingAvg   Decimal? @db.Decimal(3, 2)
  ratingCount Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])
}
